<schemalist>
    <schema id="io.elementary.monitor.resources" path="/io/elementary/monitor/resources/">
        <key name="indicator" type="b">
            <default>true</default>
            <summary>Use indicator</summary>
            <description>Mark to use app indicator and minimized to system tray.</description>
        </key>

        <!--
         binary position
         * 0 - titles
         * 1 - cpu
         * 2 - memory
         * 3 - network
        -->
        <key name="view-state" type="i">
            <default>15</default>
            <summary>View state for indicator</summary>
            <description>View state for indicator.</description>
        </key>

        <key name="compact-size" type="i">
            <default>1</default>
            <summary>Network data font size to compact mode</summary>
            <description>Network data font size to compact mode.</description>
        </key>

        <key name="interval" type="i">
            <default>1</default>
            <summary>Update interval</summary>
            <description>Time in seconds to update state.</description>
        </key>
    </schema>
</schemalist>
